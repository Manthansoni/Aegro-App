<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"

        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@id/liveStockCardImage"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="Avatar"
                android:src="@drawable/livestockimages"
                app:layout_constraintBottom_toTopOf="@+id/liveStockCardAvatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>

            <ImageView
                android:id="@+id/liveStockCardAvatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/livestockprofile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/liveStockCardImage"
                android:background="@drawable/corners_curved"
                android:contentDescription="Avatar" />

            <TextView
                android:id="@+id/liveStockCardAvatarName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Aman Singh"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/liveStockCardDate"
                app:layout_constraintStart_toEndOf="@+id/liveStockCardAvatar"
                app:layout_constraintTop_toBottomOf="@+id/liveStockCardImage" />

            <TextView
                android:id="@+id/liveStockCardPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="+91 23757230423"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/liveStockCardAvatarName"
                app:layout_constraintStart_toEndOf="@+id/liveStockCardAvatar"
                app:layout_constraintTop_toBottomOf="@+id/liveStockCardAvatarName" />

            <TextView
                android:id="@+id/liveStockCardTypeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Type: "
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/liveStockCardAvatar" />

            <TextView
                android:id="@+id/liveStockCardCapacityLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Capacity: "
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/liveStockCardTypeLabel"
                app:layout_constraintEnd_toStartOf="@+id/liveStockCardCapacity" />

            <TextView
                android:id="@+id/liveStockCardType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="CowType"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/liveStockCardTypeLabel"
                app:layout_constraintStart_toEndOf="@+id/liveStockCardTypeLabel" />

            <TextView
                android:id="@+id/liveStockCardCapacity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Aman Singh"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/liveStockCardTypeLabel"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/liveStockCardDetails"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="A paragraph is a series of related sentences developing a central idea, called the topic. Try to think about paragraphs in terms of thematic unity: a paragraph is a sentence or a group of sentences that supports one central, unified idea. Paragraphs add one idea at a time to your broader argument."
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/liveStockCardTypeLabel" />

            <TextView
                android:id="@+id/liveStockCardDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="11-11-1111"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/liveStockCardImage" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>






</androidx.constraintlayout.widget.ConstraintLayout>

